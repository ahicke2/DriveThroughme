<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Calorie Counter #<%= @calorie_counter.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to icon('chevron-left'), calorie_counters_path, class: "btn btn-primary" %>

              <%= link_to icon('edit'), edit_calorie_counter_path(@calorie_counter), class: "btn btn-warning" %>

              <%= link_to icon('trash-o'), @calorie_counter, method: :delete, data: { confirm: "Do you really want to delete this calorie_counter?" }, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
